# Hartzell HR Center - Environment Variables

# ======================
# Application
# ======================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ======================
# Bitrix24 Integration
# ======================
BITRIX24_WEBHOOK_URL=https://hartzell.app/rest/1/jp689g5yfvre9pvd
BITRIX24_ENTITY_TYPE_ID=1054

# Entity Type: 1054 (HR Center)
# Pipeline 1 - Recruitment: Category ID 18
# Pipeline 2 - Onboarding: Category ID 10

# ======================
# Authentication
# ======================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-generate-with-openssl-rand-base64-32

# ======================
# Email Service (Choose One)
# ======================
# Option 1: AWS SES (Recommended)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your-access-key
AWS_SES_SECRET_ACCESS_KEY=your-secret-key
AWS_SES_FROM_EMAIL=noreply@hartzell.com

# Option 2: SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@hartzell.com

# Option 3: SMTP (Generic)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@hartzell.com

# ======================
# Error Tracking & Monitoring
# ======================
# Sentry (Optional - for production)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENV=development

# ======================
# Database (Future - if needed)
# ======================
# For now, all data is in Bitrix24
# DATABASE_URL=postgresql://user:password@localhost:5432/hr_center

# ======================
# Feature Flags
# ======================
NEXT_PUBLIC_ENABLE_RECRUITMENT=true
NEXT_PUBLIC_ENABLE_ONBOARDING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_REVIEWS=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ======================
# Security
# ======================
# Session duration (in seconds)
SESSION_MAX_AGE=28800  # 8 hours
# CSRF token secret
CSRF_SECRET=your-csrf-secret-here

# ======================
# File Upload
# ======================
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.jpg,.jpeg,.png

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_MAX=100  # Max requests per window
RATE_LIMIT_WINDOW=60000  # Window in ms (1 minute)

# ======================
# Development Tools
# ======================
# Enable debug logging
DEBUG=false
# Enable React strict mode
STRICT_MODE=true
